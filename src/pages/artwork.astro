---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="wrapper">
    <NavBar />
    <div class="head-title">
      <h1>Visual Artwork</h1>
    </div>
    <div class="artwork-wrapper">
      <div class="photo-card">
        <img src="/images/photography/icon.svg" class="icon"/>
      </div>
      <div class="art-card">
        <img src="/images/artwork/articon.svg" class="icon"/>
      </div>
    </div>
  </div>
</Layout>

<style>
  body {
    background-image: url("/images/grids.svg");
  }
  .wrapper {
    overflow: auto;
    padding: 2rem;
    display: block;
  }

  .head-title {
    margin-top: 92px;
    margin-left: 47px;
    display: flex;
    align-items: end;
  }

  .artwork-wrapper {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 50px;
  }

 
</style>
