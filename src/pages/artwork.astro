---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="wrapper">
    <NavBar />
    <div class="head-title">
      <h1>Visual Artwork</h1>
    </div>
    <div class="artwork-wrapper">
      <div class="photo-card">
        <a href="/photography">
          <div class="card-content">
            <img src="/images/photography/icon.svg" class="photoicon" />
            <div class="overlay">
              <span>Photography</span>
            </div>
          </div>
        </a>
      </div>

      <div class="art-card">
        <a href="/painting">
          <div class="card-content">
            <img src="/images/artwork/articon.svg" class="articon" />
            <div class="overlay">
              <span>Artworks</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  body {
    background-image: url("/images/grids.svg");
  }
  .wrapper {
    overflow: auto;
    padding: 2rem;
    display: block;
  }

  .head-title {
    margin-top: 80px;
    margin-bottom: 0px;
    margin-left: 47px;
    display: flex;
    align-items: end;
  }

  h1{
    font-family: "itc-benguiat", serif;
    font-weight: 400;
    font-size: 2.6rem;
  }

  .artwork-wrapper {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-top: -15px;
    }

  .photo-card,
  .art-card {
    position: relative; /* Set positioning context */
    cursor: pointer;
    overflow: hidden;
    border-radius: 12px; /* Optional rounded edges */
  }

  .card-content {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .photoicon .articon {
    width: 450px;
    display: block;
    transition: transform 0.3s ease;
  }

  .photo-card:hover .photoicon,
  .art-card:hover .articon {
    transform: scale(1.05);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(60, 42, 77, 0.6);
    opacity: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #f9f6f0;
    font-family: "itc-benguiat", serif;
    font-size: 1.8rem;
    font-weight: 600;
    text-transform: uppercase;
    transition: opacity 0.3s ease;
    border-radius: 12px;
    pointer-events: none; /* so overlay doesn't block clicks */
  }

  .photo-card:hover .overlay,
  .art-card:hover .overlay {
    opacity: 1;
  }
</style>
